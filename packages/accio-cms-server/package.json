{
  "name": "accio-cms-server",
  "version": "0.0.1",
  "description": "Graphql Server for Accio CMS",
  "main": "index.js",
  "author": "Alexei Accio <alexei.accio@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "debug": "nodemon --exec ts-node -r tsconfig-paths/register --inspect --debug-brk src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "generate-types": "graphql-codegen",
    "test": "jest"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^1.3.1",
    "@graphql-codegen/typescript": "^1.3.1",
    "@graphql-codegen/typescript-resolvers": "^1.3.1",
    "@graphql-modules/core": "^0.7.5",
    "apollo-server": "^2.6.4",
    "graphql": "^14.3.1",
    "graphql-import-node": "^0.0.4",
    "graphql-tag": "^2.10.1",
    "graphql-toolkit": "^0.3.0",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "apollo-server-testing": "^2.6.4",
    "eslint-config-prettier": "^5.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.graphql$": "graphql-import-node/jest"
    },
    "testRegex": "(<rootDir>/src/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
